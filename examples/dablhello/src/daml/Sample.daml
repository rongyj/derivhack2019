daml 1.2

module Sample where


template Greeter
  with
    party : Party
  where
    signatory party
    key party : Party
    maintainer key

    controller party can
      nonconsuming SayHello : ContractId HelloMessage
        with
          to      : Party
          message : Text
        do
          create HelloMessage with
            sender    = party
            recipient = to
            message


template HelloMessage
  with
    sender    : Party
    recipient : Party
    message   : Text
  where
    signatory sender
    observer recipient
